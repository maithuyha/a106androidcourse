<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<TextView android:id="@+id/locationname" android:text="ABCD"
	android:layout_width="wrap_content"
	android:textSize="20dip" 
	android:layout_marginLeft="5dip"
	android:layout_marginTop="5dip"
	android:layout_height="28px" android:textStyle="bold" android:layout_weight="1"/>
	
	<TextView android:id="@+id/locationaddress" android:text="ABCD"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" 
	android:textSize="15dip" 
	android:layout_marginLeft="5dip"
	android:layout_marginBottom="5dip" android:layout_weight="1"/>
	
	
	
</LinearLayout>