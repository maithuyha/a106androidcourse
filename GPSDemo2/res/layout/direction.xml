<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" android:orientation="horizontal">
    <RelativeLayout android:id="@+id/relativeLayout1" 
    	android:layout_height="fill_parent" 
    	android:layout_width="wrap_content" android:gravity="fill_vertical">
        <TextView android:id="@+id/fromtextview"
        	android:layout_alignParentLeft="true" 
        	android:layout_height="wrap_content"  
        	android:layout_width="35px" 
        	android:layout_alignBaseline="@+id/fromcoordinate"
        	android:text="From" 
        	android:layout_marginLeft="5dip">
        </TextView>
        <EditText android:id="@+id/fromcoordinate"
        	android:text="My location"  
        	android:layout_height="wrap_content"
        	android:layout_toRightOf="@+id/fromtextview" 
        	android:layout_marginLeft="5dip" 
        	android:layout_marginTop="5dip" 
        	android:layout_marginBottom="5dip" 
        	android:layout_width="235px">
        </EditText>
    	<Button android:id="@+id/fromretrieve"
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content"
    		android:layout_toRightOf="@+id/fromcoordinate" 
    		android:layout_marginTop="5dip" 
    		android:layout_marginBottom="5dip" 
    		android:text="....">
    	</Button>
    	
    	<TextView android:id="@+id/totextview"
        	android:layout_alignParentLeft="true" 
        	android:layout_height="wrap_content"  
        	android:layout_width="35px" 
        	android:layout_alignBaseline="@+id/tocoordinate"
        	android:layout_below="@+id/fromtextview"
        	android:text="To" 
        	android:layout_marginLeft="5dip">
        </TextView>
        <EditText android:id="@+id/tocoordinate"
        	android:text="My location"  
        	android:layout_height="wrap_content"
        	android:layout_toRightOf="@+id/totextview"
        	android:layout_below="@+id/fromcoordinate"
        	android:layout_marginLeft="5dip" 
        	android:layout_marginTop="5dip" 
        	android:layout_marginBottom="5dip" 
        	android:layout_width="235px">
        </EditText>
        <Button android:id="@+id/toretrieve"
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content"
    		android:layout_toRightOf="@+id/tocoordinate" 
    		android:layout_below="@+id/fromretrieve"
    		android:layout_marginTop="5dip" 
    		android:layout_marginBottom="5dip" 
    		android:text="....">
    	</Button>
    	<Button android:id="@+id/buttondrawdirection"
        	android:layout_height="wrap_content"  
        	android:text="@string/showdirection"
        	android:layout_toLeftOf="@+id/buttoncancel"
        	android:layout_width="fill_parent" 
        	android:layout_marginTop="5dip"
        	android:layout_below="@+id/tocoordinate">
	    </Button>
	    <Button android:id="@+id/buttoncancel"
        	android:layout_height="wrap_content" 
        	android:layout_alignParentRight="true"
        	android:text="@string/cancel"
        	android:width="160px" 
        	android:layout_width="wrap_content" 
        	android:layout_marginTop="5dip"
        	android:layout_below="@+id/tocoordinate">
	    </Button>
    </RelativeLayout>
    
</LinearLayout>
