<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<RelativeLayout android:layout_height="fill_parent"
		android:layout_width="wrap_content" android:id="@+id/relativeLayout1">
		

		 <TextView android:id="@+id/textView1"
        	android:layout_alignParentLeft="true" 
        	android:layout_height="wrap_content"  
        	android:layout_width="65px" 
        	android:layout_alignBaseline="@+id/savename"
        	android:text="Name" 
        	android:layout_marginLeft="5dip">
        </TextView>
        <EditText android:id="@+id/savename"        	  
        	android:layout_height="wrap_content"
        	android:layout_toRightOf="@+id/textView1" 
        	android:layout_marginLeft="5dip" 
        	android:layout_marginTop="5dip" 
        	android:layout_marginBottom="5dip" 
        	android:layout_width="240px" android:singleLine="false" android:lines="3">
        </EditText>
        
        <TextView android:id="@+id/textView2"
        	android:layout_alignParentLeft="true" 
        	android:layout_height="wrap_content"  
        	android:layout_width="65px" 
        	android:layout_alignBaseline="@+id/savelatitude"
        	android:layout_below="@+id/savename"
        	android:text="Latitude" 
        	android:layout_marginLeft="5dip">
        </TextView>
        <EditText android:id="@+id/savelatitude"        	  
        	android:layout_height="wrap_content"
        	android:layout_toRightOf="@+id/textView2"
        	android:layout_below="@+id/savename"
        	android:layout_marginLeft="5dip" 
        	android:layout_marginTop="5dip" 
        	android:layout_marginBottom="5dip" 
        	android:layout_width="240px" android:editable="false">
        </EditText>

		<TextView android:id="@+id/textView3"
        	android:layout_alignParentLeft="true" 
        	android:layout_height="wrap_content"  
        	android:layout_width="65px" 
        	android:layout_alignBaseline="@+id/savelongitude"
        	android:layout_below="@+id/savelatitude"
        	android:text="Longitude" 
        	android:layout_marginLeft="5dip">
        </TextView>
        <EditText android:id="@+id/savelongitude"        	 
        	android:layout_height="wrap_content"
        	android:layout_toRightOf="@+id/textView3"
        	android:layout_below="@+id/savelatitude"
        	android:layout_marginLeft="5dip" 
        	android:layout_marginTop="5dip" 
        	android:layout_marginBottom="5dip" 
        	android:layout_width="240px" android:editable="false">
        </EditText>
        
        <TextView android:id="@+id/textView4"
        	android:layout_alignParentLeft="true" 
        	android:layout_height="wrap_content"  
        	android:layout_width="65px" 
        	android:layout_alignBaseline="@+id/saveaddress"
        	android:layout_below="@+id/savelongitude"
        	android:text="Address" 
        	android:layout_marginLeft="5dip">
        </TextView>
        <EditText android:id="@+id/saveaddress"        	 
        	android:layout_height="wrap_content"
        	android:layout_toRightOf="@+id/textView4"
        	android:layout_below="@+id/savelongitude"
        	android:layout_marginLeft="5dip" 
        	android:layout_marginTop="5dip" 
        	android:layout_marginBottom="5dip" 
        	android:layout_width="240px" android:editable="false" android:lines="4">
        </EditText>
        
         <Button android:id="@+id/saveaccept"
	        android:layout_height="wrap_content"
	        android:layout_width="80px"
	        android:text="Save"
	        android:layout_toLeftOf="@+id/savecancel"
	        android:layout_below="@+id/saveaddress"></Button>
        <Button android:id="@+id/savecancel"
	        android:layout_height="wrap_content"
	        android:layout_width="80px"
	        android:layout_marginRight="5dip" 
	        android:text="Cancel"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/saveaddress"></Button>
        
       
	</RelativeLayout>
</LinearLayout>
